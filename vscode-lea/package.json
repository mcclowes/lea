{
  "name": "lea-language",
  "displayName": "Lea Language",
  "description": "Language support for Lea - a pipe-oriented functional programming language with autocomplete, go-to-definition, hover documentation, and error diagnostics",
  "version": "0.3.2",
  "publisher": "mcclowes",
  "author": {
    "name": "Max Clayton Clowes"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcclowes/lea"
  },
  "bugs": {
    "url": "https://github.com/mcclowes/lea/issues"
  },
  "homepage": "https://github.com/mcclowes/lea#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "lea",
    "functional",
    "pipe",
    "pipeline",
    "syntax highlighting",
    "language server"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:lea"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lea",
        "aliases": [
          "Lea",
          "lea"
        ],
        "extensions": [
          ".lea"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "snippets": [
      {
        "language": "lea",
        "path": "./snippets/lea.json"
      }
    ],
    "grammars": [
      {
        "language": "lea",
        "scopeName": "source.lea",
        "path": "./syntaxes/lea.tmLanguage.json"
      },
      {
        "scopeName": "markdown.lea.codeblock",
        "path": "./syntaxes/lea.markdown.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.lea": "lea"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lea",
      "properties": {
        "lea.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Lea language server."
        },
        "lea.strictMode": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable strict type checking by default."
        }
      }
    },
    "configurationDefaults": {
      "[lea]": {
        "editor.stickyScroll.enabled": true,
        "editor.stickyScroll.defaultModel": "foldingProviderModel",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "variable.parameter.attachment.lea",
            "settings": {
              "foreground": "#CE9178",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "support.type.decorator.validate.lea",
            "settings": {
              "foreground": "#4682B4",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "keyword.operator.parallel-pipe.lea",
            "settings": {
              "foreground": "#DCDCAA"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  }
}
