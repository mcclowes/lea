{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string"] },
    { "open": "<>", "close": "<>" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "`", "close": "`" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<>",
      "end": "^\\s*<>\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "->\\s*$",
    "decreaseIndentPattern": "^\\s*$"
  }
}
