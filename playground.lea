-- Welcome to Lea Playground!
-- A pipe-oriented functional programming language

let numbers = [1, 2, 3, 4, 5]

-- Data flows left-to-right with pipes
let pipeline = 
  /> filter((x) -> x > 2)
  />>> (x) -> x * x
  /> reduce(0, (acc, x) -> acc + x)

numbers /> pipeline /> print

